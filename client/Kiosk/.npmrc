public-hoist-pattern[]=*@heroui/*

# Electron download configuration
# Use mirrors for better connectivity (uncomment the one that works best)
electron_mirror=https://npmmirror.com/mirrors/electron/
# electron_mirror=https://cdn.npmmirror.com/binaries/electron/
# electron_mirror=https://github.com/electron/electron/releases/download/
electron_custom_dir={{ version }}

# Increase timeouts for slow networks
fetch-timeout=600000
fetch-retries=10
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=180000

# Use production registry
registry=https://registry.npmjs.org/

# Strict peer dependencies (set to false to avoid conflicts)
strict-peer-dependencies=false
legacy-peer-deps=true

# Engine strict (prevent incompatible Node versions)
engine-strict=true

# If behind corporate proxy, uncomment and configure:
# proxy=http://proxy.company.com:8080
# https-proxy=http://proxy.company.com:8080

# Disable strict SSL only if absolutely necessary (corporate proxies)
# strict-ssl=false

# Uncomment if Electron downloads keep failing and you'll install manually:
# electron_skip_binary_download=1