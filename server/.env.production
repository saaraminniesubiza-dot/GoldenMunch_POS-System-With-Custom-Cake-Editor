# Production Environment Configuration for Render
# ==============================================
# IMPORTANT: Replace placeholder values with your actual Render configuration
# These values should be set in Render's Environment Variables dashboard

NODE_ENV=production

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Database Configuration (MySQL)
# For cloud databases, set these in Render environment variables
# ACTUAL CREDENTIALS are in .env.production.local (NOT committed to git)
DB_HOST=your-mysql-host.example.com
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_secure_database_password
DB_NAME=your_database_name
# Set to 'true' for cloud databases that require SSL (Aiven, AWS RDS, etc.)
DB_SSL=false

# JWT Authentication Secrets
# CRITICAL: Generate secure random strings (at least 64 characters)
# You can generate them with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_WITH_SECURE_64_CHAR_RANDOM_STRING
ADMIN_JWT_SECRET=REPLACE_WITH_SECURE_64_CHAR_RANDOM_STRING
CASHIER_JWT_SECRET=REPLACE_WITH_SECURE_64_CHAR_RANDOM_STRING

# CORS Configuration
# Add your Render frontend URLs (comma-separated, no spaces)
CORS_ORIGIN=https://admin-goldenmunch.onrender.com,https://editor-goldenmunch.onrender.com

# Mobile Editor URLs
# Replace with your actual Render service URLs
MOBILE_EDITOR_URL=https://editor-goldenmunch.onrender.com
BACKEND_URL=https://api-goldenmunch.onrender.com
FRONTEND_URL=https://admin-goldenmunch.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
